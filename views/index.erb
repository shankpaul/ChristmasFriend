<div id="xmasapp">
	<h1>Xmas Friend App
		<a href='logout' class="not-me right">Not <%= @profile["first_name"] %></a>
	</h1>
	<div class="content">
		<h2><%= 'Hello, ' + @profile["first_name"] + ' Welcome to xmas app  ' unless @profile.nil?  %></h2>

		<div class="img-area">

			<img src='<%= @profile["image"]  unless @profile.nil? %>'>

		</div>
		<form action="/friend" method="post">

			<%
			unless @profile.nil? 
				if @profile['gender'] == 'female'  %>
				<div class="gender"><input type="radio" value="female" name="gender"> Girls Only 
					<input type="radio" value="all" name="gender" checked="checked" > Mixed 
				</div>
				<% end 
			end
			%>
			<input class="xmas-btn" value="Find Your Friend" type="submit">
		</form>
	</div>
</div>

